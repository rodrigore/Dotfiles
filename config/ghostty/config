# visuals
font-family = JetBrains Mono
font-size = 17
adjust-cell-height = 85%
macos-window-shadow = false
mouse-hide-while-typing = true
# theme = Catppuccin Mocha
theme = TokyoNight Moon

# custom gtk
gtk-custom-css = "styles/gtk.css"

# custom shader
custom-shader-animation = true
# custom-shader = "shaders/tesla_coil.glsl"
# custom-shader = "shaders/glow.glsl"

# title
title = " "
# macos-titlebar-proxy-icon = hidden # this kill the three dots
window-decoration = true
# macos-titlebar-style = hidden
# this kill tabs

# window
# window-decoration = false
window-padding-balance = true
window-save-state = always
window-padding-x = 10
window-padding-y = 10
window-colorspace = "display-p3"

# clipboard
clipboard-read = "allow"
clipboard-trim-trailing-spaces = true
clipboard-write = "allow"

# # keybindings

# Tab Navigation
keybind = cmd+[=previous_tab
keybind = cmd+]=next_tab

# New Tab
keybind = cmd+t=new_tab

# Toggle Split Zoom
keybind = cmd+z=toggle_split_zoom

# Close Current Surface (pane/tab)
keybind = cmd+w=close_surface

# Split Horizontal (right)
keybind = cmd+e=new_split:right

# Split Vertical (down)
keybind = cmd+shift+e=new_split:down

# Navigate Splits (vim-style)
keybind = cmd+h=goto_split:left
keybind = cmd+l=goto_split:right
keybind = cmd+j=goto_split:down
keybind = cmd+k=goto_split:up

# Copy to Clipboard
keybind = cmd+c=copy_to_clipboard

# Toggle Split Zoom
keybind = cmd+z=toggle_split_zoom

# Command Palette
keybind = cmd+shift+p=toggle_command_palette

# Resize Splits
keybind = opt+h=resize_split:left,5
keybind = opt+j=resize_split:down,5
keybind = opt+k=resize_split:up,5
keybind = opt+l=resize_split:right,5


keybind = super+p=text:\x10

